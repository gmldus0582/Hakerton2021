<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/button_blue_radius"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/llMainLayout" style="@style/MainLayout">

        <TextView
            android:id="@+id/tvBankInfo"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:gravity="center"
            android:text="XX은행"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="40dp"  />

        <TableLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:layout_marginBottom="5dp"
                    style="@style/TextViewAPIResult"
                    android:text="핀테크이용번호"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvFintechUseNum"
                    style="@style/TextViewAPIResultValue"
                    android:visibility="gone"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_marginBottom="5dp"
                    style="@style/TextViewAPIResult"
                    android:layout_marginStart="10dp"
                    android:text="계좌정보"
                    android:fontFamily="@font/notoxanscjkkr_regular"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/tvAccountInfo"
                    android:fontFamily="@font/notoxanscjkkr_regular"
                    android:textColor="#ffffff"
                    style="@style/TextViewAPIResultValue" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_marginBottom="5dp"
                    style="@style/TextViewAPIResult"
                    android:text="동의여부"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvAgree"
                    style="@style/TextViewAPIResultValue"
                    android:visibility="gone"/>
            </TableRow>

            <TableRow android:id="@+id/trPayerNum">
                <TextView
                    android:layout_marginBottom="5dp"
                    style="@style/TextViewAPIResult"
                    android:text="납부자번호"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvPayerNum"
                    style="@style/TextViewAPIResultValue"
                    android:visibility="gone"/>
            </TableRow>

            <TableRow android:id="@+id/trAccountState">
                <TextView
                    android:layout_marginBottom="5dp"
                    style="@style/TextViewAPIResult"
                    android:text="계좌상태"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvAccountState"
                    style="@style/TextViewAPIResultValue"
                    android:visibility="gone"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</RelativeLayout>






