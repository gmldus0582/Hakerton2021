<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--메인-->

    <LinearLayout
        android:id="@+id/llMainLayout"
        style="@style/MainLayout"
        android:background="#a890fe"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                style="@style/FormValue02"
                android:layout_width="120dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:text="동전기부"
                android:fontFamily="@font/notoxanscjkkr_regular"
                android:layout_marginLeft="60dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                style="@style/FormValue02"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="보유동전"
                android:fontFamily="@font/notoxanscjkkr_regular"
                android:textColor="#000000"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="60dp"
                android:textSize="15dp" />

            <TextView
                style="@style/FormValue02"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="누적 기부액"
                android:fontFamily="@font/notoxanscjkkr_regular"
                android:textColor="#000000"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="220dp"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textBalance"
                style="@style/FormValue02"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="115dp"
                android:text="잔액"
                android:layout_marginLeft="60dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/blackhansans_regular"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textSum"
                style="@style/FormValue02"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="115dp"
                android:text="1000원"
                android:fontFamily="@font/blackhansans_regular"
                android:textColor="#ffffff"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btnTrnsWDPage"
                style="@style/Button01"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/button_round"
                android:text="기부하기"
                android:fontFamily="@font/notoxanscjkkr_bold"
                android:textSize="18dp" />

                <Button
                    android:id="@+id/btnActivity"
                    style="@style/Button01"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="200dp"
                    android:background="@drawable/button_round"
                    android:text="기부활동"
                    android:fontFamily="@font/notoxanscjkkr_bold"
                    android:textSize="18dp" />

            <ImageView
                android:id="@+id/handcoin"
                android:layout_width="103dp"
                android:layout_height="130dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/handcoin"></ImageView>

            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/dial"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="40dp"
                        android:text="일반기부"
                        android:fontFamily="@font/notoxanscjkkr_regular"
                        android:textColor="#281473"
                        android:textSize="17dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/inputMoney"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="기부 금액 입력"
                        android:fontFamily="@font/blackhansans_regular"
                        android:textColor="#9d9d9d"
                        android:textSize="35dp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:text="1"
                    android:fontFamily="@font/blackhansans_regular"
                    android:textColor="#281473"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/blackhansans_regular"
                    android:background="#00ff0000"
                    android:text="2"
                    android:textColor="#281473"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:text="3"
                    android:fontFamily="@font/blackhansans_regular"
                    android:textColor="#281473"
                    android:textSize="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/four"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:text="4"
                    android:fontFamily="@font/blackhansans_regular"
                    android:textColor="#281473"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/blackhansans_regular"
                    android:background="#00ff0000"
                    android:text="5"
                    android:textColor="#281473"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:text="6"
                    android:fontFamily="@font/blackhansans_regular"
                    android:textColor="#281473"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/blackhansans_regular"
                    android:background="#00ff0000"
                    android:text="7"
                    android:textColor="#281473"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:text="8"
                    android:fontFamily="@font/blackhansans_regular"
                    android:textColor="#281473"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:text="9"
                    android:fontFamily="@font/blackhansans_regular"
                    android:textColor="#281473"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/reset"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:text="취소"
                    android:textColor="#281473"
                    android:textSize="25dp" />
                <Button
                    android:id="@+id/zero"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/blackhansans_regular"
                    android:background="#00ff0000"
                    android:text="0"
                    android:textColor="#281473"
                    android:textSize="25dp" />
                <ImageButton
                    android:id="@+id/del"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:src="@drawable/del"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnSelfWithdraw"
                    style="@style/Button01"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_round"
                    android:text="기부하기"
                    android:fontFamily="@font/notoxanscjkkr_bold"
                    android:textSize="18dp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomButton"
        style="@style/BottomButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            android:id="@+id/btnCancel"
            style="@style/BottomCancelButton" />

        <Button
            android:id="@+id/btnNext"
            style="@style/BottomNextButton" />
    </LinearLayout>



</RelativeLayout>