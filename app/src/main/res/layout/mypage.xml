<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="기부내역"
            android:textColor="#ffffff"
            android:fontFamily="@font/notoxanscjkkr_bold"
            android:textSize="30dp"></TextView>
            <Button
                android:id="@+id/btnInqrTranRecPage"
                style="@style/Button01"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_round"
                android:text="더보기"
                android:fontFamily="@font/notoxanscjkkr_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/button_round_blue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/md_black_1000"
                    android:text="누적 기부액"
                    android:fontFamily="@font/notoxanscjkkr_regular"
                    android:gravity="center">

                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/notoxanscjkkr_regular"
                    android:text="기부한 생리대 수"
                    android:gravity="center">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mySum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:text="000"
                    android:textSize="50dp"
                    android:fontFamily="@font/blackhansans_regular"
                    android:gravity="center_horizontal">

                </TextView>
                <TextView
                    android:id="@+id/padNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:text="000"
                    android:textSize="50dp"
                    android:fontFamily="@font/blackhansans_regular"
                    android:gravity="center_horizontal">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>